<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/container_card"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@drawable/touchable_background_white">

            <ImageView
                android:id="@+id/sub_thumbnail"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:layout_marginLeft="8dp"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container_card"
            android:background="@android:color/transparent">

            <View
                android:id="@+id/seperator_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/light_grey"/>

            <TextView
                android:id="@+id/text_view"
                style="@style/CardButtonTextStyle"
                android:layout_below="@+id/seperator_line"
                android:background="@drawable/touchable_background_white"
                android:text="@string/text_view"
                android:textColor="@color/primary_text"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>